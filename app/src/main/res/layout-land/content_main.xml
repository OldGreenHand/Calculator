* Landscape UI including layouts and buttons
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:gravity="bottom|end"
        android:background="#000000"
        android:layout_alignParentTop="true"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:maxLength="70"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="3dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="left">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="("
            android:textSize="35dp"
            android:background="@color/colorFun"
            android:textAllCaps="false"
            android:id="@+id/button_lb"
            android:onClick="showLeftbracket"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text=")"
            android:textSize="35dp"
            android:background="@color/colorFun"
            android:textAllCaps="false"
            android:id="@+id/button_rb"
            android:onClick="showRightbracket"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="π"
            android:textSize="35dp"
            android:background="@color/colorFun"
            android:textAllCaps="false"
            android:id="@+id/button_pi"
            android:onClick="showPi"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="AC"
            android:textSize="35dp"
            android:background="@color/colorFun"
            android:id="@+id/button_ac"
            android:onClick="showAc"
            android:layout_row="0"
            android:layout_column="3" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="DEL"
            android:textSize="35dp"
            android:background="@color/colorFun"
            android:id="@+id/button_del"
            android:onClick="showDelete"
            android:layout_row="0"
            android:layout_column="4" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="%"
            android:textSize="35dp"
            android:background="@color/colorFun"
            android:id="@+id/button_percentage"
            android:onClick="showPercentage"
            android:layout_row="0"
            android:layout_column="5" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="÷"
            android:background="@color/colorOperator"
            android:textSize="35dp"
            android:id="@+id/button_divide"
            android:onClick="showDivide"
            android:layout_row="0"
            android:layout_column="6" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="x²"
            android:textSize="35dp"
            android:background="@color/colorFun"
            android:textAllCaps="false"
            android:id="@+id/button_square"
            android:onClick="showSquare"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="√x"
            android:textSize="35dp"
            android:background="@color/colorFun"
            android:textAllCaps="false"
            android:id="@+id/button_sqrt"
            android:onClick="showSqrt"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="|x|"
            android:textSize="35dp"
            android:background="@color/colorFun"
            android:textAllCaps="false"
            android:id="@+id/button_abs"
            android:onClick="showAbs"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="7"
            android:textSize="35dp"
            android:background="@color/colorNum"
            android:id="@+id/button_7"
            android:onClick="showSeven"
            android:layout_row="1"
            android:layout_column="3" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="8"
            android:textSize="35dp"
            android:background="@color/colorNum"
            android:id="@+id/button_8"
            android:onClick="showEight"
            android:layout_row="1"
            android:layout_column="4" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="9"
            android:textSize="35dp"
            android:background="@color/colorNum"
            android:id="@+id/button_9"
            android:onClick="showNine"
            android:layout_row="1"
            android:layout_column="5" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="×"
            android:textSize="35dp"
            android:background="@color/colorOperator"
            android:id="@+id/button_multiply"
            android:onClick="showMultiply"
            android:layout_row="1"
            android:layout_column="6" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="x^y"
            android:textSize="35dp"
            android:background="@color/colorFun"
            android:textAllCaps="false"
            android:id="@+id/button_power"
            android:onClick="showPower"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="x!"
            android:textSize="35dp"
            android:background="@color/colorFun"
            android:textAllCaps="false"
            android:id="@+id/button_factorial"
            android:onClick="showFactorial"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="1/x"
            android:textSize="35dp"
            android:background="@color/colorFun"
            android:textAllCaps="false"
            android:id="@+id/button_reciprocal"
            android:onClick="showReciprocal"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="4"
            android:textSize="35dp"
            android:background="@color/colorNum"
            android:id="@+id/button_4"
            android:onClick="showFour"
            android:layout_row="2"
            android:layout_column="3" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="5"
            android:textSize="35dp"
            android:background="@color/colorNum"
            android:id="@+id/button_5"
            android:onClick="showFive"
            android:layout_row="2"
            android:layout_column="4" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="6"
            android:textSize="35dp"
            android:background="@color/colorNum"
            android:id="@+id/button_6"
            android:onClick="showSix"
            android:layout_row="2"
            android:layout_column="5"
            />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="-"
            android:textSize="35dp"
            android:background="@color/colorOperator"
            android:id="@+id/button_minus"
            android:onClick="showMinus"
            android:layout_row="2"
            android:layout_column="6" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="log"
            android:textSize="35dp"
            android:background="@color/colorFun"
            android:textAllCaps="false"
            android:id="@+id/button_log"
            android:onClick="showLog"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="ln"
            android:textSize="35dp"
            android:background="@color/colorFun"
            android:textAllCaps="false"
            android:id="@+id/button_ln"
            android:onClick="showLn"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="e"
            android:textSize="35dp"
            android:background="@color/colorFun"
            android:textAllCaps="false"
            android:id="@+id/button_e"
            android:onClick="showE"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="1"
            android:textSize="35dp"
            android:background="@color/colorNum"
            android:id="@+id/button_1"
            android:onClick="showOne"
            android:layout_row="3"
            android:layout_column="3" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="2"
            android:textSize="35dp"
            android:background="@color/colorNum"
            android:id="@+id/button_2"
            android:onClick="showTwo"
            android:layout_row="3"
            android:layout_column="4" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="3"
            android:textSize="35dp"
            android:background="@color/colorNum"
            android:id="@+id/button_3"
            android:onClick="showThree"
            android:layout_row="3"
            android:layout_column="5" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="+"
            android:textSize="35dp"
            android:background="@color/colorOperator"
            android:id="@+id/button_plus"
            android:onClick="showPlus"
            android:layout_row="3"
            android:layout_column="6" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="sin"
            android:textSize="35dp"
            android:background="@color/colorFun"
            android:textAllCaps="false"
            android:id="@+id/button_sin"
            android:onClick="showSin"
            android:layout_row="4"
            android:layout_column="0" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="cos"
            android:textSize="35dp"
            android:background="@color/colorFun"
            android:textAllCaps="false"
            android:id="@+id/button_cos"
            android:onClick="showCos"
            android:layout_row="4"
            android:layout_column="1" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="tan"
            android:textSize="35dp"
            android:background="@color/colorFun"
            android:textAllCaps="false"
            android:id="@+id/button_tan"
            android:onClick="showTan"
            android:layout_row="4"
            android:layout_column="2" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="0"
            android:textSize="35dp"
            android:background="@color/colorNum"
            android:id="@+id/button_0"
            android:onClick="showZero"
            android:layout_row="4"
            android:layout_column="3" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="."
            android:textSize="35dp"
            android:background="@color/colorNum"
            android:id="@+id/button_point"
            android:onClick="showPoint"
            android:layout_row="4"
            android:layout_column="4" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="Ans"
            android:textSize="35dp"
            android:background="@color/colorNum"
            android:id="@+id/button_ans"
            android:onClick="showAns"
            android:layout_row="4"
            android:layout_column="5" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/button_margin"
            android:text="="
            android:textSize="35dp"
            android:background="@color/colorOperator"
            android:id="@+id/button_equal"
            android:onClick="showResult"
            android:layout_row="4"
            android:layout_column="6" />
    </GridLayout>


</RelativeLayout>
